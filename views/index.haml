%h1.text-center Unsplash Free High-Resolution Photos Gallery
.row
  %ul.list-unstyled
    -@images.each do |image|
      %li.col-md-4
        %h3=image.title
        %p
          %a.thumbnail{href:image.file,data:{lightbox:"gallery",title:image.title}}
            %img{src: image.file.url(:small), width: "100%",height:"240px"}
        %p
          %span(class='st_facebook_hcount' displayText='Facebook' st_url="#{request.base_url}/images/#{image.id}")
          %span(class='st_twitter_hcount' displayText='Tweet' st_url="#{request.base_url}/images/#{image.id}")

%h1 Upload new image

%form(action="/images" method="post" enctype="multipart/form-data")
  %p
    %input(type="file" name="image[file]" id="file")

  %p
    %input(type="text" name="image[title]" class="form-control" placeholder="Enter a title for the image.")

  %p
    %button(class="btn btn-primary") Upload!
